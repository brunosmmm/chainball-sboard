#!/usr/bin/env python3
"""Chainball Game."""

import argparse
import logging
import signal
import time
import os

from scoreboard.game.engine import ChainballGame
from scoreboard.util.threads import StoppableThread
from scoreboard.util.zeroconf import ZeroconfService
from scoreboard.util.configfiles import (
    ChainBallConfiguration,
    ChainBallConfigurationError,
)
from scoreboard.web import WebBoard


class GameWrapper(StoppableThread):
    """Main Game Thread."""

    def __init__(self, virtual_hw, configuration):
        """Initialize."""
        super(GameWrapper, self).__init__()
        # create game object
        self.game = ChainballGame(
            virtual_hw=virtual_hw, configuration=configuration
        )
        self.game.post_init()

    def run(self):
        """Run thread."""
        # never exit
        while True:
            if self.is_stopped():
                self.game.shutdown()
                break
            else:
                self.game.game_loop()

                # throttle main loop
                time.sleep(0.01)


if __name__ == "__main__":

    def _handle_signal(*whatever):
        exit(0)

    # Parse Command Line arguments
    parser = argparse.ArgumentParser()
    parser.add_argument(
        "--nohw",
        action="store_true",
        help="hardware not present, development only",
    )
    parser.add_argument("--port", help="web interface port", default=80)

    args = parser.parse_args()

    # main loop
    logging.basicConfig(
        level=logging.DEBUG,
        filename="scoreboard.log",
        filemode="w",
        format="%(asctime)s - %(name)s -" " %(levelname)s - %(message)s",
    )

    console = logging.StreamHandler()
    console.setLevel(logging.INFO)
    logging.getLogger("").addHandler(console)

    logger = logging.getLogger("sboard")

    # publish as service
    published = False
    try:
        avahi_service = ZeroconfService(
            name="Chainball Scoreboard", port=args.port, stype="_http._tcp"
        )
        avahi_service.publish()
        published = True
    except Exception as ex:
        logger.error("failed to publish scoreboard service: {}".format(ex))

    logger.info("Scoreboard Starting")

    signal.signal(signal.SIGTERM, _handle_signal)

    CONFIGURATION = ChainBallConfiguration(
        extrapaths=os.path.join(os.getcwd(), "conf")
    )
    try:
        CONFIGURATION.load_configuration()
    except ChainBallConfigurationError as ex:
        logger.error(ex)
        exit(1)

    # spawn game engine in thread
    GAME_WRAPPER = GameWrapper(args.nohw, CONFIGURATION)
    GAME_WRAPPER.start()

    # web server
    # NOT THREAD SAFE
    WEB_SCOREBOARD = WebBoard(args.port, GAME_WRAPPER.game, bind_all=True)

    # spawn web server
    WEB_SCOREBOARD.run()

    # done, cleanup and exit
    GAME_WRAPPER.stop()
    if published:
        avahi_service.unpublish()
